<h1 class='page-header'>Log Game</h1>

<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <%- unless @game.errors.empty? %>
      <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <p>
          <strong>The following errors occurred</strong>
        </p>
        <%- @game.errors.messages.each do |m| %>
          <p><%= "#{m[0]} #{m[1][0]}" %></p>
        <%- end %>
      </div>
    <%- end %>

    <%= form_for @game, url: { action: 'create' }, html: { class: 'form-horizontal' } do |f| %>
      <div class="form-group">
        <%= f.label :date_played %>
        <%= f.date_field :date_played, class: 'form-control', placeholder: 'Date Played' %>
      </div>
      <div class="form-group">
        <%= f.select :opponent_id, options_for_select(opponent_options), { prompt: 'Choose the opponent' }, { class: 'form-control' } %>
      </div>
      <div class="form-group">
        <%= f.label :your_score %>
        <%= f.number_field :your_score, class: 'form-control', placeholder: 'Your score', min: 0 %>
      </div>
      <div class="form-group">
        <%= f.label :their_score %>
        <%= f.number_field :their_score, class: 'form-control', placeholder: 'Their score', min: 0 %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-primary' %>
        <%= link_to 'Cancel', root_path, class: 'btn btn-danger' %>
      </div>
    <%- end %>
  </div>
</div>
