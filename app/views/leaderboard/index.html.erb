<h1 class='page-header'>Leaderboard</h1>

<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <table class="table table-striped">
      <thead>
        <th>Rank</th>
        <th>Email</th>
        <th>Score</th>
        <th>Games Played</th>
      </thead>
      <tbody>
        <%- @users.each_with_index do |user| %>
          <tr>
            <td><%= user.ranking %></td>
            <td><%= user.email %></td>
            <td><%= user.score %></td>
            <td><%= user.games.count %></td>
          </tr>
        <%- end %>
      </tbody>
    </table>
  </div>
</div>
